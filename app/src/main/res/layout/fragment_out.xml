<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.out.OutFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/out_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/out_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp"
                android:checkedButton="@id/out_short_out"
                app:layout_constraintTop_toTopOf="parent">

                <kr.hs.dgsw.flow.view.out.custom.OutRadioButton
                    android:id="@+id/out_short_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/short_out"
                    app:outType="Short"/>

                <kr.hs.dgsw.flow.view.out.custom.OutRadioButton
                    android:id="@+id/out_long_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/long_out"
                    app:outType="Long"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintBottom_toTopOf="@+id/out_apply_button"
                app:layout_constraintTop_toBottomOf="@+id/out_radio_group">

                <LinearLayout
                    android:id="@+id/out_out_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/out_radio_group">

                    <TextView
                        android:id="@+id/out_out_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/outing_time"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/out_out_date_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="yyyy-MM-dd hh:mm"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/out_out_date_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/outing_date" />

                        <Button
                            android:id="@+id/out_out_time_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/outing_time" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/out_in_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/out_apply_button"
                    app:layout_constraintTop_toBottomOf="@+id/out_out_layout">

                    <TextView
                        android:id="@+id/out_in_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="복귀 시간"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/out_in_date_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="yyyy-MM-dd hh:mm"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/out_in_date_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/in_date" />

                        <Button
                            android:id="@+id/out_in_time_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/in_time" />
                    </LinearLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/out_reason_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/out_reason_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이유" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/out_apply_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/apply"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>